.context {
  width: 100%;
  height: 1240rpx;
  background: #e0ffe3;
}
.item {
  width: 100%;
  padding-bottom: 1mm;
  margin: 10rpx 0 5rpx 0;
  background: #e0ffe3;
}
.item .header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 4rpx;
  background-image: -webkit-linear-gradient(top, #5bbdfe, #e0ffe3);
  background-image: linear-gradient(to bottom, #5bbdfe, #e0ffe3);
}
.item .header .header-text {
  margin: 8rpx 0 0 15rpx;
}
.item .item-context {
  margin: 0rpx 10rpx 10rpx 10rpx;
}
.item .comment {
  width: 100%;
  padding: 15rpx 20rpx 10rpx 20rpx;
  position: fixed;
  bottom: 0rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: #fff;
}
.item .context-detail {
  margin: 0 0 10rpx 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.item .comment-header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.item .comment-name {
  margin: 8rpx 0 0 15rpx;
}
.item .comment-text {
  width: 90%;
  padding-bottom: 1mm;
  margin: 0rpx 20rpx 0rpx 60rpx;
}

